{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "types": ["vite/client", "ziggy-js"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"],
    }
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.vue",
    "resources/js/types/**/*.d.ts"
  ]
}
